@model List<EmailProject.Entities.Message>
@{
    
    Layout = null;
}
@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>YMail</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="relative text-gray-300 font-sans antialiased overflow-hidden">

    <!-- Blur Background -->
    <div class="fixed inset-0 -z-10">
        <img src="~/Images/kizkulesi.jpg"
             class="w-full h-full object-cover blur-md scale-110" />

        <!-- Dark Overlay -->
        <div class="absolute inset-0 bg-black/70"></div>
    </div>




    <div class="relative z-10 flex h-screen">


        <div class="w-64 bg-gray-900/70 backdrop-blur-md border-r border-gray-800 flex flex-col">

            
            <div class="p-5">
                <div class="p-6 border-b flex justify-center">
                    <img src="~/Images/Ylogo.png" class="h-56  mx-auto mb-0" />

                </div>


                <a href="/Message/CreateMessage"
                   class="block bg-orange-500 hover:bg-orange-600 text-white font-medium text-center py-3 rounded shadow-lg shadow-orange-500/20 transition-all mb-6">
                    Yeni Mail Gönder
                </a>

                <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Klasörler</div>
                <nav class="space-y-1">
                    <a href="/Message/Inbox"
                       class="flex items-center px-3 py-2 rounded transition
   @(string.IsNullOrEmpty(Context.Request.Query["starred"])
                               ? "bg-gray-800 text-white"
                               : "text-gray-400 hover:bg-gray-800 hover:text-white")">

                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path></svg>
                            <span>Gelen Kutusu</span>
                        </div>
                        @if (ViewBag.InboxCount > 0)
                        {
                            <span class="bg-green-500 text-white text-[10px] px-1.5 py-0.5 rounded font-bold">
                                @(ViewBag.InboxCount > 99 ? "99+" : ViewBag.InboxCount)
                            </span>
                        }
                    </a>

                    <a href="/Message/Inbox?starred=true"
                       class="flex items-center justify-between px-3 py-2 rounded transition
   @(Context.Request.Query["starred"] == "true"
                               ? "bg-gray-800 text-white"
                               : "text-gray-400 hover:bg-gray-800 hover:text-white")">


                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z">
                                </path>
                            </svg>
                            <span>Yıldızlı</span>
                        </div>

                        @if (ViewBag.StarredCount > 0)
                        {
                            <span class="bg-gray-700 text-gray-300 text-[10px] px-1.5 py-0.5 rounded font-bold">
                                @(ViewBag.StarredCount > 99 ? "99+" : ViewBag.StarredCount)
                            </span>
                        }


                    </a>


                    <a href="#" class="flex items-center justify-between px-3 py-2 hover:bg-gray-800 rounded text-gray-400 hover:text-white transition">
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                            <span>Taslaklar</span>
                        </div>
                        <span class="bg-yellow-600 text-white text-[10px] px-1.5 py-0.5 rounded font-bold">2</span>
                    </a>

                    <a href="/Message/Sendbox" class="flex items-center justify-between px-3 py-2 hover:bg-gray-800 rounded text-gray-400 hover:text-white transition">
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                            <span>Gönderilenler</span>
                        </div>
                        @if (ViewBag.SentCount > 0)
                        {
                            <span class="bg-blue-500 text-white text-[10px] px-1.5 py-0.5 rounded font-bold">
                                @(ViewBag.SentCount > 99 ? "99+" : ViewBag.SentCount)
                            </span>
                        }

                    </a>
                    <a href="#" class="flex items-center justify-between px-3 py-2 hover:bg-gray-800 rounded text-gray-400 hover:text-white transition">
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            <span>Çöp Kutusu</span>
                        </div>
                        <span class="bg-red-600 text-white text-[10px] px-1.5 py-0.5 rounded font-bold">7</span>
                    </a>
                </nav>

                <div class="mt-8 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Etiketler</div>
                <nav class="space-y-1">
                    <div class="flex items-center gap-3 px-3 py-2 text-gray-400 hover:text-white cursor-pointer hover:bg-gray-800 rounded">
                        <span class="w-3 h-3 rounded-full bg-orange-500 border-2 border-gray-900"></span> İş
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2 text-gray-400 hover:text-white cursor-pointer hover:bg-gray-800 rounded">
                        <span class="w-3 h-3 rounded-full bg-blue-400 border-2 border-gray-900"></span> Ticari
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2 text-gray-400 hover:text-white cursor-pointer hover:bg-gray-800 rounded">
                        <span class="w-3 h-3 rounded-full bg-yellow-400 border-2 border-gray-900"></span> Aile
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2 text-gray-400 hover:text-white cursor-pointer hover:bg-gray-800 rounded">
                        <span class="w-3 h-3 rounded-full bg-cyan-400 border-2 border-gray-900"></span> Arkadaşlar
                    </div>
                </nav>
            </div>
        </div>

        <div class="flex-1 flex flex-col bg-gray-950">

            <div class="bg-gray-900 border-b border-gray-800 h-16 flex justify-between items-center px-6">

                <div class="w-96 relative">
                    <span class="absolute left-3 top-2.5 text-gray-500">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </span>
                    <form method="get">
                        <input type="text" name="search"
                               placeholder="Mail ara..."
                               class="w-full bg-gray-800 text-gray-200 pl-10 pr-4 py-2 rounded-lg focus:outline-none focus:ring-1 focus:ring-orange-500 placeholder-gray-500 border border-transparent focus:border-orange-500 transition">
                    </form>
                </div>
                <div class="relative flex items-center gap-3 h-10">

                    <div class="hidden md:flex flex-col justify-center text-right">
                        <span class="text-sm font-semibold text-white">
                            @ViewBag.UserName @ViewBag.UserSurname
                        </span>
                        <span class="text-xs text-gray-400">
                            @ViewBag.UserEmail
                        </span>
                    </div>

                    <!-- Avatar Button -->
                   
                    <button onclick="toggleDropdown()"
                            class="h-10 w-10 rounded-full overflow-hidden border-2 border-gray-800 focus:outline-none">

                        @if (!string.IsNullOrEmpty(ViewBag.UserImage))
                        {
                            <img src="~/Images/@ViewBag.UserImage"
                                 class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-full bg-gradient-to-tr from-orange-400 to-pink-500 flex items-center justify-center text-white font-bold">
                                @(ViewBag.UserEmail != null && ViewBag.UserEmail.Length > 0
                                                            ? ViewBag.UserEmail.Substring(0, 1).ToUpper()
                                                            : "Y")
                        </div>
                                                }
                    </button>

                    <!-- Dropdown Menu -->
                    <div id="profileDropdown"
                         class="hidden absolute right-0 top-full w-56 bg-gray-900 border border-gray-800 rounded-xl shadow-2xl z-[9999] overflow-hidden"


                        <!-- User Info -->
                        <div class="px-4 py-3 border-b border-gray-800">
                            <div class="text-sm font-semibold text-white">
                                @ViewBag.UserName @ViewBag.UserSurname
                            </div>
                            <div class="text-xs text-gray-400">
                                @ViewBag.UserEmail
                            </div>

                            <div class="text-xs text-gray-500">Hesap Yönetimi</div>
                        </div>

                        <!-- Menu Items -->
                        <a href="/Profile/Index"
                           class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-800 hover:text-white transition">
                            👤 Profilim
                        </a>

                        

                        <form method="post" asp-controller="Login" asp-action="UserLogin">
                            <button type="submit"
                                    class="w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-gray-800 transition">
                                🚪 Çıkış Yap
                            </button>
                        </form>

                    </div>
                </div>
            </div>

            <div class="flex-1 overflow-y-auto p-4">

                <div class="bg-gray-900 rounded-lg shadow border border-gray-800">
                    <div class="flex items-center px-3 py-2 text-xs font-semibold text-gray-400 border-b border-gray-700 bg-gray-900/50">
                        <div class="w-10 mr-4"></div>

                        <div class="w-48 pl-2">KİMDEN</div>

                        <div class="flex-1 flex gap-4">
                            <div class="w-1/4 min-w-[150px]">KONU</div> <div class="flex-1">MESAJ</div>
                        </div>

                        <div class="w-40 text-right pr-4">TARİH</div>
                    </div>
                    @{
                        var colors = new[]
                        {
                                        "bg-red-500",
                                        "bg-blue-500",
                                        "bg-green-500",
                                        "bg-yellow-500",
                                        "bg-purple-500",
                                        "bg-pink-500",
                                        "bg-indigo-500"
                                        };
                    }

                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {

                            <div class="group flex items-center p-3 border-b border-gray-800 hover:bg-gray-800  transition cursor-pointer @(item.IsStatus ? "bg-gray-900 opacity-75" : "bg-gray-800/30")">

                                <a href="javascript:void(0)"
                                   onclick="openMessage(@item.MessageId)"
                                   class="flex-1 min-w-0 flex items-center gap-4">

                                    <div class="relative flex-shrink-0">
                                        @{
                                            var colorIndex = item.SenderEmail?.Length % colors.Length ?? 0;
                                            var selectedColor = colors[colorIndex];
                                        }
                                        <div class="h-10 w-10 rounded-full @selectedColor flex items-center justify-center text-white font-bold border border-gray-600">

                                            @(item.SenderEmail?.Length > 0 ? item.SenderEmail.Substring(0, 1).ToUpper() : "?")
                                        </div>
                                        <button onclick="toggleStar(event, @item.MessageId, this)" class="absolute -bottom-1 -right-1 bg-gray-800 rounded-full p-0.5">
                                            <svg class="w-4 h-4 @(item.IsStarred ? "text-yellow-400 fill-yellow-400" : "text-gray-500")"
                                                 fill="@(item.IsStarred ? "currentColor" : "none")"
                                                 stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                                            </svg>
                                        </button>
                                    </div>

                                    <div class="w-48 flex-shrink-0">
                                        <div class="@(item.IsStatus == false ? "font-bold text-white" : "text-gray-400") truncate">
                                            @item.SenderEmail
                                        </div>
                                        @if (item.MessageId % 3 == 0)
                                        {
                                            <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-blue-500/10 text-blue-400 border border-blue-500/20">Arkadaş</span>
                                        }
                                        else if (item.MessageId % 2 == 0)
                                        {
                                            <span class="inline-block px-2 py-0.5 rounded text-[10px] font-bold bg-orange-500/10 text-orange-400 border border-orange-500/20">İş</span>
                                        }
                                </div>

                                <div class="flex-1 min-w-0 flex items-center gap-4">

                                    <div class="w-1/4 min-w-[150px] truncate @(item.IsStatus == false ? "font-bold text-gray-100" : "text-gray-300")">
                                        @item.Subject
                                    </div>

                                    <span class="text-gray-600 hidden sm:inline">-</span>

                                    <div class="flex-1 truncate text-gray-500">
                                            @{
                                                var plainText = item.MessageDetail != null
                                                ? System.Text.RegularExpressions.Regex.Replace(item.MessageDetail, "<.*?>", "")
                                                : "";

                                                var preview = plainText.Length > 80
                                                ? plainText.Substring(0, 80) + "..."
                                                : plainText;
                                            }

                                            @preview

                                </div>
                            </div>

                                </a>

                                <div class="flex items-center gap-4 w-40 justify-end pl-4">
                                    <div class="text-xs text-gray-500 whitespace-nowrap group-hover:hidden">
                                        @item.SentDate.ToString("dd MMM")
                                    </div>

                                    <div class="hidden group-hover:flex items-center gap-2">
                                @if (!item.IsStatus)
                                        {
                                            <form method="post" asp-action="MarkAsRead" asp-controller="Message">
                                                <input type="hidden" name="id" value="@item.MessageId" />
                                                <button type="submit" title="Okundu İşaretle" class="p-2 text-gray-400 hover:text-green-400 hover:bg-gray-700 rounded-full transition">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76"></path></svg>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-action="DeleteMessage" asp-controller="Message">
                                            <input type="hidden" name="id" value="@item.MessageId" />
                                            <button type="submit" title="Sil" class="p-2 text-gray-400 hover:text-red-500 hover:bg-gray-700 rounded-full transition">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    function toggleDropdown() {
        document.getElementById("profileDropdown").classList.toggle("hidden");
    }

    // Dışarı tıklayınca kapansın
    window.addEventListener("click", function (e) {
        const dropdown = document.getElementById("profileDropdown");
        const button = e.target.closest("button");

        if (!e.target.closest(".relative")) {
            dropdown.classList.add("hidden");
        }
    });
</script>

<script>
    function toggleStar(e, id, element) {
        // 1. Linke tıklanmasını engelle (Detay sayfasına gitmeyi durdur)
        e.stopPropagation();
        e.preventDefault();

        // 2. Arka planda Controller'a istek at
        fetch('/Message/ToggleStar/' + id, {
            method: 'POST'
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                console.error("Hata oluştu");
            }
        })
        .then(isStarred => {
            // 3. Sadece ikonu güncelle (Sayfa yenilenmez)
            const svg = element.querySelector("svg");

            if (isStarred) {
                // Yıldızlı Hale Getir
                svg.classList.remove("text-gray-500", "text-gray-400"); // Olası gri tonları temizle
                svg.classList.add("text-yellow-400", "fill-yellow-400");
                svg.setAttribute("fill", "currentColor");
            } else {
                // Yıldızı Kaldır
                svg.classList.remove("text-yellow-400", "fill-yellow-400");
                svg.classList.add("text-gray-500"); // Veya text-gray-400
                svg.setAttribute("fill", "none");
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>
<!-- MESSAGE MODAL -->
<div id="messageModal"
     class="hidden fixed inset-0 bg-black/70 backdrop-blur-sm flex items-center justify-center z-50">

    <div class="bg-gray-900 w-full max-w-3xl rounded-2xl shadow-2xl border border-gray-800 overflow-hidden relative">

        <!-- Close Button -->
        <button onclick="closeMessage()"
                class="absolute top-4 right-4 text-gray-400 hover:text-white text-xl">
            ✕
        </button>

        <div id="modalContent" class="p-8 text-gray-300">
            <!-- AJAX ile buraya dolacak -->
        </div>

    </div>
</div>
<script>
    function openMessage(id) {

        fetch('/Message/MessageDetail/' + id)
            .then(response => response.text())
            .then(html => {

                document.getElementById("modalContent").innerHTML = html;
                document.getElementById("messageModal").classList.remove("hidden");

                document.body.classList.add("overflow-hidden");
            });
    }

    function closeMessage() {
        document.getElementById("messageModal").classList.add("hidden");
        document.body.classList.remove("overflow-hidden");
    }

    // Modal dışına tıklayınca kapansın
    document.getElementById("messageModal").addEventListener("click", function (e) {
        if (e.target.id === "messageModal") {
            closeMessage();
        }
    });
</script>
