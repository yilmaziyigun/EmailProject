@model EmailProject.Dtos.UserEditDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Profilim - YMail</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="relative text-gray-300 font-sans antialiased overflow-hidden">

    <!-- ARKA PLAN AYNI -->
    <div class="fixed inset-0 -z-10">
        <img src="~/Images/kizkulesi.jpg"
             class="w-full h-full object-cover blur-md scale-110" />
        <div class="absolute inset-0 bg-black/70"></div>
    </div>

    <div class="relative z-10 flex h-screen">

       
        <!-- SAĞ İÇERİK -->
        <div class="flex-1 flex flex-col bg-gray-950">

            

            <!-- PROFİL CONTENT -->
            <div class="flex-1 overflow-y-auto p-8">

                <div class="max-w-4xl mx-auto">
                   
                    <!-- PROFIL HEADER CARD -->
                    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 shadow-xl mb-8 flex items-center gap-6">

                        <div class="h-24 w-24 rounded-full overflow-hidden border-4 border-white/20">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="~/Images/@Model.ImageUrl"
                                     class="w-full h-full object-cover" />
                            }
                            else
                            {
                                <div class="w-full h-full bg-black/30 flex items-center justify-center text-3xl text-white font-bold">
                                    @Model.Username.Substring(0, 1).ToUpper()
                                </div>
                            }
                        </div>

                        <div>
                            <h2 class="text-2xl font-bold text-white">
                                @Model.Name @Model.Surname
                            </h2>
                            <p class="text-indigo-100">@Model.Email</p>
                        </div>
                    </div>

                    <!-- FORM CARD -->
                    <div class="bg-gray-900 rounded-2xl shadow-xl border border-gray-800 p-8">

                        <h3 class="text-lg font-semibold text-white mb-6">
                            Profil Bilgilerini Güncelle
                        </h3>

                        <form asp-action="Index" method="post" enctype="multipart/form-data" class="space-y-6">

                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label class="text-sm text-gray-400">Ad</label>
                                    <input asp-for="Name"
                                           class="w-full mt-1 bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
                                </div>

                                <div>
                                    <label class="text-sm text-gray-400">Soyad</label>
                                    <input asp-for="Surname"
                                           class="w-full mt-1 bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
                                </div>
                            </div>

                            <div>
                                <label class="text-sm text-gray-400">Kullanıcı Adı</label>
                                <input asp-for="Username"
                                       class="w-full mt-1 bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
                            </div>

                            <div>
                                <label class="text-sm text-gray-400">Email</label>
                                <input asp-for="Email"
                                       class="w-full mt-1 bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
                            </div>

                            <div>
                                <label class="text-sm text-gray-400">Profil Fotoğrafı</label>
                                <input asp-for="Image"
                                       type="file"
                                       class="w-full mt-1 bg-gray-800 border border-gray-700 text-gray-400 rounded-lg px-4 py-2" />
                            </div>

                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label class="text-sm text-gray-400">Yeni Şifre</label>
                                    <input asp-for="Password" type="password"
                                           class="w-full mt-1 bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
                                </div>
                            </div>

                            <div class="pt-4">
                                <button type="submit"
                                        class="bg-indigo-600 hover:bg-indigo-700 px-6 py-2 rounded-lg text-white font-semibold transition shadow-lg shadow-indigo-600/20">
                                    Değişiklikleri Kaydet
                                </button>
                            </div>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>
</html>